{% extends "@Admin/base_list.html.twig" %}

{% block title %}
    <div class="page-header">
        <h1>Module lieu <small>- Liste des lieux</small></h1>
    </div>
{% endblock %}

{% block list_thead %}
    <tr>
        <th>#</th>
        <th>Titre</th>
        <th></th>
    </tr>
{% endblock %}

{% block list_tbody %}
    {% if places is defined %}
        {% for place in places %}
            <tr>
                <th scope="row">{{ place.id }}</th>
                <th>{{ place.title }}</th>
                <th>
                    <div class="btn-toolbar" role="toolbar">
                        <a href="{{ path('DisplayBundle_Place_edit', {'pk': place.id}) }}" class="btn btn-xs btn-default" title="Editer le lieu">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="{{ path('DisplayBundle_Place_delete', {'pk': place.id}) }}"class="btn btn-xs btn-danger" data-function="confirmDel" data-msg="un lieu" title="Supprimer le lieu">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </div>
                </th>
            </tr>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block aside %}
    <a href="{{ path('DisplayBundle_Place_new') }}" class="btn btn-block btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Ajouter un lieu
    </a>
{% endblock aside %}
